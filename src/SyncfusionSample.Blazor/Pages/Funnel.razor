@page "/funnel"
@using Syncfusion.Blazor.Charts

<SfAccumulationChart Title="Product count statistics">
    <AccumulationChartSeriesCollection>
        <AccumulationChartSeries DataSource="@StatisticsDetails" XName="Browser" YName="Users"
                                 Name="Browser" Type="AccumulationType.Funnel" NeckWidth="15%" NeckHeight="18%">
            <AccumulationDataLabelSettings Visible="true" />
        </AccumulationChartSeries>
    </AccumulationChartSeriesCollection>

    <AccumulationChartLegendSettings Visible="true"></AccumulationChartLegendSettings>
</SfAccumulationChart>

@code {
    public class Statistics
    {
        public string Browser { get; set; }
        public double Users { get; set; }
    }
    public List<Statistics> StatisticsDetails = new List<Statistics>
    {
        new Statistics { Browser = "Electronics", Users = 37 },
        new Statistics { Browser = "Furniture", Users = 17 },
        new Statistics { Browser = "Stationaries", Users = 49 },
        new Statistics { Browser = "Others", Users = 14  },
        new Statistics { Browser = "communication", Users = 11 },
        new Statistics { Browser = "food", Users = 12 },
    };
    
}